        "encoding"
    ],
    "author": "Tobias Wingerter <tobias@quackes.de>",
    "license": "MIT",
    "devDependencies": {
        "ava": "^1.3.1"
    },
    "dependencies": {
        "webpack": "^4.29.5",
        "webpack-sources": "^1.3.0",
        "encoding": "^0.1.12"
    }
}
